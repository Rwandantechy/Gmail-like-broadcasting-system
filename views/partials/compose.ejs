<!-- model start here  -->

<!-- Modal content -->
<div
  class="bg-gradient-to-b from-green-200 via-gray-300 to-green-600 shadow-lg rounded-lg overflow-hidden w-full md:w-2/3 ml-14 h-auto p-6"
  id="composeEmailModal"
  style="display: none"
>
  <div class="flex justify-between items-center">
    <h1 class="text-left">NEW EMAIL</h1>
    <div class="modal-controls">
      <button type="button" id="expandModalButton">
        <i class="fas fa-expand"></i>
      </button>
      <button type="button" class="bg-red-200" id="minimizeModalButton">
        <i class="fas fa-window-minimize bg-red-100 text-center"></i>
      </button>
      <button type="button" id="closeModalButton">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>

  <!-- Recipient, Subject, and Body -->
  <div>
    <form  method="POST" action="/email/send">
      <div class="border-b border-gray-300">
        <input
          type="text"
          id="emailInput"
          name="emailRecipient"
          class="w-full bg-form-strokedark rounded-sm p-1 focus:outline-none focus:border-blue-400 mb-1"
          placeholder="To"
        />
        <div id="emailList" class="email-list"></div>
      </div>
      <!-- Subject -->
      <input
        type="text"
        id="emailSubject"
        name="emailSubject"
        class="w-full bg-transparent border-b border-gray-300 p-3 focus:outline-none focus:border-indigo-500 mb-4"
        placeholder="Subject"
      />

      <!-- Body -->
      <textarea
        id="emailBody"
        name="emailBody"
        rows="12"
        class="w-full bg-gray-100 shadow-sm text-black rounded-sm p-3 border-b border-black focus:outline-none focus:border-indigo-500 text-gray-700 mb-4"
        placeholder="Start typing your email here..."
      ></textarea>
    
  </div>
  <input type="text"  id="Allemails" hidden name="Allemails"/>
  
  <!-- Actions -->
  <div class="flex justify-between px-12 gap-2 rounded-b-2xl py-4 bg-gray-100">
    <!-- Send button -->
    <button
      type="submit"
      onclick="FireForm()"
      class="px-6 mt-4 py-3.5 text-base font-medium text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      
     SEND EMAIL
    </button>

    <!-- sechedule email button -->

    <button
      type="button"
      class="px-3 mt-3 py-3 text-base font-medium text-black inline-flex items-center bg-green-200 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-center dark:bg-red-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
     
      Schedule Email
    </button>

    <!-- cancel email -->
    <button
      type="button"
      class="px-3 mt-3 py-3 text-base font-medium text-white inline-flex items-center bg-gray-400 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-center dark:bg-blue-600 dark:hover:bg-red-700 dark:focus:ring-red-500"
    >
     
      Cancel Email
    </button>
  </div>
</div>
</form>
<!-- Modals end here  -->
